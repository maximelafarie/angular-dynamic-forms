{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@app/services": [
        "src/app/_services"
      ],
      "@app/services/*": [
        "src/app/_services/*"
      ],
      "@app/directives": [
        "src/app/_directives"
      ],
      "@app/directives/*": [
        "src/app/_directives/*"
      ],
      "@app/components": [
        "src/app/_components"
      ],
      "@app/components/*": [
        "src/app/_components/*"
      ],
      "@app/models": [
        "src/app/_models"
      ],
      "@app/models/*": [
        "src/app/_models/*"
      ]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
